<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Response"
        android:id="@+id/tv_respuesta"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <Button
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/button_shape"
        android:text="Check Sensitivity"
        android:id="@+id/btn_conectar"
        android:layout_below="@+id/et_diameter"
        android:layout_marginTop="30dp"
        android:elevation="8dp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_family"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:hint="Bacterial Family"
        android:layout_below="@+id/tv_respuesta"
        android:ems="12"
        android:layout_centerHorizontal="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_antimicrobial"
        android:hint="Antibiotic"
        android:layout_below="@+id/et_family"
        android:ems="12"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="12"
        android:id="@+id/et_diameter"
        android:hint="Diameter"
        android:layout_below="@+id/et_antimicrobial"
        android:layout_centerHorizontal="true" />
</RelativeLayout>